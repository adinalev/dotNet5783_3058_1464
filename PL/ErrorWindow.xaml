<Window x:Class="PL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="450" Width="800">
    <Grid>

        <!--<Image Name="ErrorImage" Source="/errorIcon.png" Margin="200,20,200,0" Height="150"/>-->
        <TextBox x:Name="ErrorTitle" Background="LightGray" FontSize="25" FontWeight="Bold" BorderThickness="4" Margin="50,33,50,327"
                TextAlignment="Center"/>
        <TextBox x:Name="ErrorDetails" Background="Transparent" FontSize="22" Margin="50,112,50,255" TextAlignment="Center"/>
        <!--<Button x:Name="OKButton" Background="LightGray" FontSize="25" Width="200" Height="50" Content="OK"
            FontWeight="DemiBold" BorderBrush="Black" Click="OKButton_Click" Margin="300,217,300,167" />-->
        <Button Name="OKButton" Content="OK" HorizontalAlignment="Center" Margin="0,198,0,184" Padding="5" Click="OKButton_Click" FontSize="15" FontStyle="Normal" FontWeight="Bold" Foreground="White" Background="BlueViolet" Width="100">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
